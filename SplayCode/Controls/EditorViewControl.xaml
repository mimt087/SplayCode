<UserControl x:Class="SplayCode.Controls.EditorViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SplayCode.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ContentControl Name="editor" Margin="0,34,0,0"/>
        <Label x:Name="label" Height="34" VerticalAlignment="Top" Background="#FFFFF29D" FontSize="13.333"/>
        <Button x:Name="closeButton" HorizontalAlignment="Right" Height="25" Margin="0,4,8,0" VerticalAlignment="Top" 
                        Width="25" Click="closeButton_Click" 
                        Panel.ZIndex="200" Background="#FFF6F6F6">
            <Image x:Name="minimizeIcon" Height="20" Source="/SplayCode;component/Resources/ic_fullscreen_exit_black_24dp_2x.png" Width="20"/>
        </Button>
    </Grid>
</UserControl>
