<UserControl x:Class="SplayCode.VirtualSpaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer Name="ScrollView" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Name="baseGrid" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Thumb Name="dragThumb" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DragDelta="onDragDelta" Opacity="0"/>
        </Grid>
    </ScrollViewer>

</UserControl>